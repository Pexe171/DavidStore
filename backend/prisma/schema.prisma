generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id             String         @id @default(cuid())
  name           String
  email          String         @unique
  password       String
  role           String
  addresses      Address[]
  orders         Order[]
  refreshTokens  RefreshToken[]
  createdAt      DateTime       @default(now())
  updatedAt      DateTime       @updatedAt
}

model Address {
  id        String   @id @default(cuid())
  street    String
  city      String
  state     String
  zip       String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId    String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Category {
  id          String    @id
  name        String
  description String?
  products    Product[]
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

model Product {
  id          String      @id
  name        String
  description String
  price       Decimal     @db.Numeric(10, 2)
  discount    Decimal     @db.Numeric(5, 4)
  stock       Int
  brand       String
  rating      Decimal?    @db.Numeric(3, 2)
  highlights  String[]
  images      String[]
  category    Category    @relation(fields: [categoryId], references: [id], onDelete: Restrict)
  categoryId  String
  items       OrderItem[]
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
}

model Order {
  id                 String      @id @default(cuid())
  status             String
  total              Decimal     @db.Numeric(12, 2)
  customer           User?       @relation(fields: [customerId], references: [id], onDelete: SetNull)
  customerId         String?
  customerReference  String?
  customerName       String
  customerEmail      String
  items              OrderItem[]
  payment            Payment?
  createdAt          DateTime    @default(now())
  updatedAt          DateTime    @updatedAt
}

model OrderItem {
  id        String   @id @default(cuid())
  quantity  Int
  price     Decimal  @db.Numeric(10, 2)
  product   Product  @relation(fields: [productId], references: [id], onDelete: Restrict)
  productId String
  order     Order    @relation(fields: [orderId], references: [id], onDelete: Cascade)
  orderId   String
}

model Payment {
  id               String   @id @default(cuid())
  order            Order    @relation(fields: [orderId], references: [id], onDelete: Cascade)
  orderId          String   @unique
  method           String
  cardBrand        String?
  status           String
  amount           Decimal  @db.Numeric(12, 2)
  netAmount        Decimal? @db.Numeric(12, 2)
  installments     Int?
  gatewayFees      Decimal? @db.Numeric(6, 4)
  riskScore        Decimal? @db.Numeric(5, 4)
  chargeback       Boolean  @default(false)
  settlementDate   DateTime?
  settlementStatus String?
  customerName     String
  createdAt        DateTime @default(now())
  authorizedAt     DateTime?
  capturedAt       DateTime?
}

model RefreshToken {
  id                  String   @id @default(cuid())
  tokenHash           String   @unique
  user                User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId              String
  expiresAt           DateTime
  revokedAt           DateTime?
  revokedReason       String?
  replacedByTokenHash String?
  ipAddress           String?
  userAgent           String?
  createdAt           DateTime @default(now())
}
